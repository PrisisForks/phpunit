<?xml version="1.0" encoding="UTF-8"?>
<testomat
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="src/Common/Schema/testomat.xsd"
>
    <printer type="expanded" show_error_on="end">
        <exclude>
            <directory>vendor/phpunit/phpunit/src</directory>
            <directory>vendor/mockery/mockery</directory>
        </exclude>
    </printer>

    <over_assertive>
        <threshold>1</threshold>
        <groups>
            <group name="test" threshold="1" />
        </groups>
    </over_assertive>
</testomat>
